datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String        @id @default(uuid())
  email            String        @unique
  password         String
  firstName        String?
  lastName         String?
  createdAt        DateTime      @default(now())
  isWorking        Boolean       @default(false)
  startedAt        DateTime?
  role             Role          @default(USER)
  hours            Int           @default(8)
  workSessions     WorkSession[]
  currentSessionId String?
  notes            Note[]
  // Project membership
  projects         Project[]     @relation("ProjectMembers")
  // Tasks this user is assigned to
  tasks            Task[]        @relation("UserTasks")
  ticketsCreated  Ticket[] @relation("TicketCreatedBy")
  ticketsReceivedTo  Ticket[] @relation("TicketSentTo")
  receiveTickets Boolean       @default(false)
}

model WorkSession {
  id        String    @id @default(uuid())
  startedAt DateTime
  endedAt   DateTime?
  time      Int?
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
}

model Note {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  assigneeId  String?
  assignee    User?    @relation("UserTasks", fields: [assigneeId], references: [id], onDelete: SetNull)
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  Tickets      Ticket[]
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  members     User[]    @relation("ProjectMembers")
  tasks       Task[]
  deadLine    DateTime?
  isCompleted Boolean   @default(false)
  Tickets     Ticket[]
}

model Ticket {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  createdById String
  createdBy   User     @relation("TicketCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)
  sentToId    String?
  sentTo      User?    @relation("TicketSentTo", fields: [sentToId], references: [id], onDelete: SetNull)
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  taskId      String?
  task        Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)
  type        Role
  isOpen      Boolean  @default(true)
}

enum Role {
  USER
  ADMIN
  PROGRAMMER
  MANAGER
  MARKETING
}
